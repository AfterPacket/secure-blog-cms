# Auto detect text files and perform LF normalization
* text=auto

# Force specific text files to always use LF line endings
*.php      text eol=lf
*.html     text eol=lf
*.css      text eol=lf
*.js       text eol=lf
*.json     text eol=lf
*.md       text eol=lf
*.txt      text eol=lf
*.xml      text eol=lf
*.yml      text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Force specific files to always use CRLF line endings for Windows compatibility
*.bat      text eol=crlf
*.cmd      text eol=crlf

# Denote binary files to prevent line ending normalization
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.zip      binary
*.gz       binary
